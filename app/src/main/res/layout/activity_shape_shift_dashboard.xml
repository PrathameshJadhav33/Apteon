<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShapeShift.ShapeShiftDashboardActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Shape Shift"
        android:textColor="@color/orange"
        android:textSize="36sp" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_num_button">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/p1"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_num_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textColor="@color/orange"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/q1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/p1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@id/ll1"
            android:alpha=".4"
            android:background="@drawable/ic_question" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/ll1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_num_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challenging"
                android:textColor="@color/orange"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/q2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/ll1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/ll1"
            android:alpha=".4"
            android:background="@drawable/ic_question" />

        <TextView
            android:id="@+id/p1"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:alpha=".75"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="PRACTICE"
            android:textSize="28sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_num_button">

        <TextView
            android:id="@+id/c3"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:alpha=".75"
            android:background="@drawable/title_background"
            android:gravity="center"
            android:text="COMPETITIVE"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/c3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_num_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Normal"
                android:textColor="@color/orange"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/q3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/c3"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/ll5"
            android:alpha=".4"
            android:background="@drawable/ic_question" />

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/ll5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_num_button"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Challenging"
                android:textColor="@color/orange"
                android:textSize="18sp" />
        </LinearLayout>


        <Button
            android:id="@+id/q4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/ll5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@id/ll6"
            android:alpha=".4"
            android:background="@drawable/ic_question" />

    </RelativeLayout>

</RelativeLayout>