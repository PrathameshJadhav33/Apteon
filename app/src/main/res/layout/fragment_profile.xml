<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Dashboard.ProfileFragment">

    <Button
        android:id="@+id/btn_changeAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_toRightOf="@id/iv_avatar"
        android:alpha=".5"
        android:background="@drawable/edit_image" />
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circular_button"
        android:padding="3dp"
        android:src="@drawable/avatar_13" />

    <EditText
        android:id="@+id/et_editname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/iv_avatar"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_num_button"
        android:drawableRight="@drawable/ic_edit_info"
        android:hint="Fullname"
        android:paddingLeft="20dp"
        android:paddingRight="10dp" />

    <EditText
        android:id="@+id/et_editAge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/et_editname"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_num_button"
        android:drawableRight="@drawable/ic_edit_info"
        android:hint="Age"
        android:paddingLeft="20dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/btn_saveprofile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_editAge"
        android:background="@drawable/rounded_edit_text1"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Save Changes" />

    <View
        android:id="@+id/divider1"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/btn_saveprofile"
        android:layout_centerHorizontal="true"
        android:background="@color/orange" />

    <Button
        android:id="@+id/btn_changepassword"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:background="@drawable/rounded_edit_text1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Reset Password" />

    <View
        android:id="@+id/divider2"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/btn_changepassword"
        android:layout_centerHorizontal="true"
        android:background="@color/orange" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:background="@drawable/rounded_num_button"
        android:textStyle="bold"
        android:text="LOGOUT" />

</RelativeLayout>